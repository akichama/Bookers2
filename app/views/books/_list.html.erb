  <h1>User info</h1>
  <table>
    <tr>
      <%= image_tag @user.get_profile_image(100,100) %>
    </tr>
    <tr>
      <th>name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
  </table>

  <p><%= link_to "Edit",edit_user_path(@user.id) %></p>

  <h1>New Book</h1>

  <%= form_with model: Book.new do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
	
    <h4>Opinion</h4>
    <%= f.text_area :body %>
	
    <%= f.submit 'Create Book' %>
  <% end %>