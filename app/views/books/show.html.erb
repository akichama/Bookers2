<div>
  <%= flash[:notice] %>
</div>

<%= render 'books/list', books: @books %>

 <h1>Book detail</h1>
 
<table>
  <tbody>
    <tr>
      <td><%= link_to @user.name, user_path(@user.id) %></td>
      <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td>
        <% if @book.user == current_user %>
        <%= link_to "Edit",edit_book_path(@book.id) %></td>
      <td>
        <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>
        <% end %>
    </tr>
  </tbody>
</table>
