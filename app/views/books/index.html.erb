<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'books/list', books: @books %>

 <h1>Books</h1>
 
 <table>
  <thead>
    <tr>
      <th>title</th>
      <th>Opinion</th>
    </tr>
  </thead> 
  
  <% @books.each do |book| %>
  
  <tbody>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>