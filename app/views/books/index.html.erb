<h1>User info</h1>
<table>
  <tr>
    <%= image_tag @user.get_profile_image(100,100) %>
  </tr>
  <tr>
    <th>name</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= @user.introduction %></td>
  </tr>
</table>

<div>
  <%= flash[:notice] %>
</div>

<h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: Book.new do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>

 <h1>Books</h1>
 
 <table>
  <thead>
    <tr>
      <th>title</th>
      <th>Opinion</th>
    </tr>
  </thead> 
  
  <% @books.each do |book| %>
  
  <tbody>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>