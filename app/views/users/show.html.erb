<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to books_path(books.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p><%= book.shop_name %></p>
  <p><%= book.caption %></p>
  <p><%= book.user.name %></p>
</div>
<% end %>