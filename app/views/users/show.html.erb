<h1>New Book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>

 <h1>Books</h1>
 
 <table>
  <thead>
    <tr>
      <th>title</th>
      <th>Opinion</th>
    </tr>
  </thead> 
  
  <% @books.each do |book| %>
  
  <tbody>
    <tr>
      <td><%= link_to  @user.name %></td>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
